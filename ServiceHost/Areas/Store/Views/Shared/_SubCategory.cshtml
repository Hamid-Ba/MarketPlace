@model IEnumerable<MarketPlace.Query.Contract.Category.CategoryQueryVM>

<ul>
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {

            <li>
                <input type="checkbox" name="CategoriesId" value="@item.Id" /> @item.Name

                @if (item.Categories != null)
                {
                    <partial name="_SubCategory" model="@item.Categories" />
                }
            </li>

        }
    }
</ul>