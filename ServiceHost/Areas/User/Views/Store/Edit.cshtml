@model MarketPlace.ApplicationContract.ViewModels.StoreAgg.EditStoreRequestVM
@{
    ViewData["Title"] = "ویرایش فروشگاه";
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!-- my account start  -->
<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <partial name="_UserAccountSideBarVM" />
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade show active" id="account-details">
                            <h3>@ViewData["Title"]</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form asp-controller="Store" asp-action="Edit" method="post">

                                            <label>نام فروشگاه</label> <span asp-validation-for="Name" class="text-danger float-right"></span>
                                            <input asp-for="Name" type="text">
                                            <br>

                                            <label>تلفن همراه</label> <span asp-validation-for="MobileNumber" class="text-danger float-right"></span>
                                            <input asp-for="MobileNumber" type="text">
                                            <br>

                                            <label>آدرس</label> <span asp-validation-for="Address" class="text-danger float-right"></span>
                                            <textarea asp-for="Address" class="form-control"></textarea>
                                            <div class="save_button primary_btn default_button">
                                                <input type="hidden" asp-for="Id" />
                                                <button type="submit">ارسال درخواست</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- my account end   -->
