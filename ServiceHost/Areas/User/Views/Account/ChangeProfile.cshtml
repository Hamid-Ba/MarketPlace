@model MarketPlace.ApplicationContract.ViewModels.Account.EditUserVM
@{
    ViewData["Title"] = "ویرایش اطلاعات";
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_CaptchaScripts" />
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!-- my account start  -->
<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <partial name="_UserAccountSideBarVM" />
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade show active" id="account-details">
                            <h3>تغییر کلمه عبور</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form asp-controller="Account" asp-action="ChangeProfile" method="post" enctype="multipart/form-data">

                                            <partial name="_CaptchaInput" />

                                            <label>نام</label> <span asp-validation-for="FirstName" class="text-danger float-right"></span>
                                            <input asp-for="FirstName" type="text">
                                            <br>
                                            <label>نام خانوادگی</label> <span asp-validation-for="LastName" class="text-danger float-right"></span>
                                            <input asp-for="LastName" type="text">


                                            <div class="col-md-4">
                                                @if (!string.IsNullOrWhiteSpace(Model.Avatar))
                                                {
                                                    <img src="/img/@Model.Avatar" style="border-radius: 50px; width: 50%" alt="Alternate Text" />
                                                }
                                                else
                                                {
                                                    <img src="/img/avatar.jpg" style="border-radius: 50px; width: 50%" alt="Alternate Text" />
                                                }
                                                <input type="file" asp-for="AvatarFile" accept="image/*"/>
                                            </div>

                                            <br>
                                            <div class="save_button primary_btn default_button">
                                                <input type="hidden" asp-for="UserId" />
                                                <input type="hidden" asp-for="Avatar" />
                                                <button type="submit">اعمال تغییرات</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- my account end   -->
