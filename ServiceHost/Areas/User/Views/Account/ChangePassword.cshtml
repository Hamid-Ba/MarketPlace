@model MarketPlace.ApplicationContract.ViewModels.Account.ChangePasswordUserVM
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

@section Scripts{ 
    <partial name="_ValidationScriptsPartial"/>
    <partial name="_CaptchaScripts"/>
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!-- my account start  -->
<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <partial name="_UserAccountSideBarVM" />
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade show active" id="account-details">
                            <h3>تغییر کلمه عبور</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form asp-controller="Account" asp-action="ChangePassword" method="post">

                                            <partial name="_CaptchaInput" />

                                            <label>رمز عبور فعلی</label> <span asp-validation-for="CurrentPassword" class="text-danger float-right"></span>
                                            <input asp-for="CurrentPassword" type="password">
                                            <br>
                                            <label>رمز عبور جدید</label> <span asp-validation-for="NewPassword"class="text-danger float-right"></span>
                                            <input asp-for="NewPassword" type="password">
                                            <br>
                                            <label>تکرار رمز عبور جدید</label> <span asp-validation-for="ConfirmedNewPassword"class="text-danger float-right"></span>
                                            <input asp-for="ConfirmedNewPassword" type="text">
                                            <div class="save_button primary_btn default_button">
                                                <button type="submit">تغییر کلمه عبور</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- my account end   -->