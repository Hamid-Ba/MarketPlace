@model MarketPlace.ApplicationContract.ViewModels.Tickets.CreateTicketVM
@{
    ViewData["Title"] = "ایجاد تیکت جدید";
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!-- my account start  -->
<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <partial name="_UserAccountSideBarVM" />
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade show active" id="account-details">
                            <h3>@ViewData["Title"]</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form asp-controller="Ticket" asp-action="CreateTicket" method="post">

                                            <label>عنوان</label> <span asp-validation-for="Title" class="text-danger float-right"></span>
                                            <input asp-for="Title" type="text">
                                            <br>

                                            <label>قسمت</label> <span asp-validation-for="Section" class="text-danger float-right"></span>
                                            <select asp-for="Section" class="form-control">
                                                <option value="0">پشتیبانی</option>
                                                <option value="1">فروش</option>
                                                <option value="2">مدیریت</option>
                                                <option value="3">امنیت</option>
                                            </select>
                                            <br>

                                            <label>اولویت</label> <span asp-validation-for="Necessary" class="text-danger float-right"></span>
                                            <select asp-for="Necessary" class="form-control">
                                                <option value="0">کم</option>
                                                <option value="1">متوسط</option>
                                                <option value="2">فوری</option>
                                            </select>
                                            <br>

                                            <label>پیام</label> <span asp-validation-for="Text" class="text-danger float-right"></span>
                                            <textarea id="TinyArea" asp-for="Text" class="form-control"></textarea>
                                            <div class="save_button primary_btn default_button">
                                                <button type="submit">ارسال پیام</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- my account end   -->
