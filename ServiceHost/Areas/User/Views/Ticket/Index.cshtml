@using Framework.Application
@model IEnumerable<MarketPlace.Query.Contract.Tickets.TicketQueryVM>

@{
    ViewData["Title"] = "تیکت ها";
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!-- my account start  -->
<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <partial name="_UserAccountSideBarVM" />
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade show active" id="dashboard">
                            <a class="btn btn-info float-right" asp-action="CreateTicket">ایجاد تیکت جدید</a>
                        </div>
                        <div class="tab-pane fade show active" id="orders">
                            <h3>لیست تیکت ها</h3>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>عنوان</th>
                                            <th>وضعیت</th>
                                            <th>اولویت</th>
                                            <th>قسمت</th>
                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var entity in Model)
                                        {
                                            <tr>
                                                <td>@entity.Title</td>
                                                <td>@entity.Status.GetEnumName()</td>
                                                <td>@entity.Necessary.GetEnumName()</td>
                                                <td>@entity.Section.GetEnumName()</td>
                                                <td><a asp-action="Detail" asp-route-ticketId="@entity.Id" class="view">مشاهده</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- my account end   -->