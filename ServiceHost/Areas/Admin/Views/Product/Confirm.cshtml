@model long

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">تایید درخواست</h4>
</div>

<form asp-area="Admin" asp-controller="Product" asp-action="Confirm"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label class="control-label">دلیل</label>
                    <textarea class="form-control autogrow" name="reason"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <input name="id" type="hidden" asp-for="@Model" />
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ارسال تاییدیه</button>
    </div>
</form>