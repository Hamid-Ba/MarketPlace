@model MarketPlace.ApplicationContract.ViewModels.Account.RegisterUserVM
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">خانه</a></li>
                        <li>حساب کاربری</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <!--register area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <h2>ثبت نام</h2>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <p>
                            <label asp-for="FirstName">نام<span>*</span></label>
                            <input asp-for="FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </p>
                        <p>
                            <label asp-for="LastName">نام خانوادگی<span>*</span></label>
                            <input asp-for="LastName">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </p>
                        <p>
                            <label asp-for="Mobile">شماره موبایل<span>*</span></label>
                            <input asp-for="Mobile">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </p>
                        <p>
                            <label asp-for="Password">رمز عبور<span>*</span></label>
                            <input asp-for="Password" type="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </p>
                        <p>
                            <label asp-for="ConfirmedPassword">تکرار رمز عبور<span>*</span></label>
                            <input asp-for="ConfirmedPassword" type="password">
                            <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                        </p>
                        
                        <div class="login_submit">
                            <button type="submit">ثبت نام</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>
